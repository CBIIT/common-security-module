<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-lazy-init="false" default-dependency-check="none" default-autowire="no">

	<bean name="FileHelper" class="gov.nih.nci.security.migrate.util.FileHelper" singleton="true" />

	<bean name="CGMMProperties" class="gov.nih.nci.security.migrate.util.CGMMProperties" singleton="true">
		<constructor-arg ref="FileHelper"></constructor-arg>
		<constructor-arg value="cgmm-properties.xml"></constructor-arg>
		<constructor-arg value="cgmm-properties.xsd"></constructor-arg>
	</bean>

	<bean name="AuthenticationServiceHelper" class="gov.nih.nci.security.migrate.helper.impl.AuthenticationServiceHelperImpl" singleton="true" />

	<bean name="DorianHelper" class="gov.nih.nci.security.migrate.helper.impl.DorianHelperImpl" singleton="true" />

	<bean name="ProxyValidator" class="gov.nih.nci.security.migrate.helper.impl.ProxyValidatorImpl" singleton="true" />

	<bean name="SAMLToAttributeMapper" class="gov.nih.nci.security.migrate.helper.impl.SAMLToAttributeMapperImpl" singleton="true" />
	
	<bean name="credentialDelegationServiceInformation" factory-bean="CGMMProperties" factory-method="getCredentialDelegationServiceInformation" singleton="true"/>

	<!--<bean name="GridCredentialDelegator" class="gov.nih.nci.security.migrate.utils.GridCredentialDelegatorImpl" singleton="true">
		<constructor-arg ref="credentialDelegationServiceInformation"></constructor-arg>
	</bean>

	-->
	
	<bean name="SAMLToAttributeMapper" class="gov.nih.nci.security.migrate.helper.impl.SAMLToAttributeMapperImpl" singleton="true" />

</beans>