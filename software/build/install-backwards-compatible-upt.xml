						</authorization>
					</application>
				]]>
		     </insert>
		</xmltask>
		<if>
			<equals arg1="${upt.31.installed}" arg2="true" />
			<then>
				<configure-application-context
							context.name="${upt.31.context.name}" url.context.name="${upt.31.url.context.name}"
