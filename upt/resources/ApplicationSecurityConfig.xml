<security-config>
	<upt-context-name>
		<!-- Context Name for the UPT Application -->
		<<upt_context_name>>
	</upt-context-name>
	<application-list>
	<!-- For every application using the security api an entry should be made here -->
		<application>
			<context-name>
				<<upt_context_name>>
			</context-name>
			<authentication>
				<lockout-time>
					18000000				
				</lockout-time>
				<allowed-login-time>
					300000
				</allowed-login-time>
				<allowed-attempts>
					3
				</allowed-attempts>
				<authentication-provider-class>
				<!-- Fully qualified class name-->
				</authentication-provider-class>
			</authentication>
			<authorization>
				<authorization-provider-class>
					<!-- Fully qualified class name-->
				</authorization-provider-class>
				<hibernate-config-file>
					<!-- Fully qualified file path -->
					<<hibernate_cfg_file_path>>
				</hibernate-config-file>
			</authorization>
		</application>
	</application-list>
</security-config>
