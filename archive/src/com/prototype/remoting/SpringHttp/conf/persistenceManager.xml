<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="persistenceManagerService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl">
            <value>http://localhost:8080/SpringHttp12/http/persistenceManager</value>
        </property>
        <property name="serviceInterface">
            <value>com.prototype.application.persistence.PersistenceManager</value>
        </property>
    </bean>
</beans>